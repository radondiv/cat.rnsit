
'use client';
import Hero3D from '@/components/Hero3D';
import GlassPanel from '@/components/GlassPanel';
import anime from 'animejs';

export default function Home() {
  // simple fade-in on mount
  if (typeof window !== 'undefined') {
    anime({
      targets: '.fade-in',
      opacity: [0, 1],
      translateY: [10, 0],
      easing: 'easeOutQuad',
      duration: 800,
      delay: anime.stagger(120)
    });
  }

  return (
    <div className="space-y-6">
      <Hero3D />
      <GlassPanel className="fade-in">
        <h2 className="text-2xl font-semibold mb-2">Announcements</h2>
        <ul className="list-disc pl-6 space-y-1">
          <li>Welcome to CAT â€” vibrant cultural activities at RNSIT!</li>
          <li>Committee inductions opening soon.</li>
          <li>Stay tuned for upcoming events.</li>
        </ul>
      </GlassPanel>
    </div>
  );
}
